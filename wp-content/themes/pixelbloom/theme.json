{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "title": "PixelBloom",
  "description": "A simple, clean blog theme using WordPress FSE",
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#0073aa",
          "name": "Primary"
        },
        {
          "slug": "secondary",
          "color": "#6c757d",
          "name": "Secondary"
        },
        {
          "slug": "accent",
          "color": "#ff6b6b",
          "name": "Accent"
        },
        {
          "slug": "background",
          "color": "#ffffff",
          "name": "Background"
        },
        {
          "slug": "text",
          "color": "#333333",
          "name": "Text"
        },
        {
          "slug": "light",
          "color": "#f8f9fa",
          "name": "Light"
        },
        {
          "slug": "dark",
          "color": "#343a40",
          "name": "Dark"
        }
      ],
      "gradients": [
        {
          "slug": "primary-to-accent",
          "gradient": "linear-gradient(135deg, #0073aa 0%, #ff6b6b 100%)",
          "name": "Primary to Accent"
        },
        {
          "slug": "light-to-dark",
          "gradient": "linear-gradient(135deg, #f8f9fa 0%, #343a40 100%)",
          "name": "Light to Dark"
        }
      ],
      "custom": true,
      "customGradient": true,
      "defaultPalette": false,
      "defaultGradients": false
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "Poppins, sans-serif",
          "slug": "poppins",
          "name": "Poppins",
          "fontFace": [
            {
              "fontFamily": "Poppins",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Poppins-Regular.woff2"
              ]
            },
            {
              "fontFamily": "Poppins",
              "fontWeight": "700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Poppins-Bold.woff2"
              ]
            }
          ]
        },
        {
          "fontFamily": "Nunito, sans-serif",
          "slug": "nunito",
          "name": "Nunito",
          "fontFace": [
            {
              "fontFamily": "Nunito",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Nunito-Regular.woff2"
              ]
            },
            {
              "fontFamily": "Nunito",
              "fontWeight": "700",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": [
                "file:./assets/fonts/Nunito-Bold.woff2"
              ]
            }
          ]
        }
      ],
      "fontSizes": [
        {
          "slug": "small",
          "size": "14px",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "16px",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "18px",
          "name": "Large"
        },
        {
          "slug": "x-large",
          "size": "24px",
          "name": "Extra Large"
        },
        {
          "slug": "xx-large",
          "size": "32px",
          "name": "XX Large"
        },
        {
          "slug": "huge",
          "size": "48px",
          "name": "Huge"
        }
      ],
      "customFontSize": true
    },
    "spacing": {
      "units": [
        "px",
        "em",
        "rem",
        "%",
        "vh",
        "vw"
      ],
      "padding": true,
      "margin": true,
      "blockGap": true,
      "spacingSizes": [
        {
          "slug": "x-small",
          "size": ".5rem",
          "name": "XSmall"
        },
        {
          "slug": "small",
          "size": "1rem",
          "name": "Small"
        },
        {
          "slug": "medium",
          "size": "2rem",
          "name": "Medium"
        },
        {
          "slug": "large",
          "size": "3rem",
          "name": "Large"
        }
      ]
    },
    "layout": {
      "contentSize": "1140px",
      "wideSize": "1260px"
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "custom": {
      "spacing": {
        "small": "max(1.25rem, 5vw)",
        "medium": "max(2.5rem, 8vw)",
        "large": "max(4rem, 10vw)"
      },
      "typography": {
        "line-height": {
          "tiny": 1.15,
          "small": 1.3,
          "medium": 1.6,
          "large": 1.8
        }
      }
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--nunito)",
      "fontSize": "var(--wp--preset--font-size--medium)",
      "lineHeight": "1.6"
    },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--primary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--accent)"
          }
        },
        "typography": {
          "textDecoration": "none"
        }
      },
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontSize": "var(--wp--preset--font-size--huge)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontSize": "var(--wp--preset--font-size--xx-large)",
          "fontWeight": "700",
          "lineHeight": "1.3"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontSize": "var(--wp--preset--font-size--x-large)",
          "fontWeight": "700",
          "lineHeight": "1.4"
        }
      },
      "h4": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontSize": "var(--wp--preset--font-size--large)",
          "fontWeight": "700",
          "lineHeight": "1.4"
        }
      },
      "h5": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontWeight": "700",
          "lineHeight": "1.5"
        }
      },
      "h6": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontWeight": "700",
          "lineHeight": "1.5"
        }
      }
    },
    "blocks": {
      "core/paragraph": {
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          }
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "top": "2rem",
            "bottom": "1rem"
          }
        }
      },
      "core/button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "var(--wp--preset--color--background)"
        },
        ":hover": {
          "color": {
            "background": "var(--wp--preset--color--accent)",
            "text": "var(--wp--preset--color--background)"
          }
        },
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--poppins)",
          "fontSize": "var(--wp--preset--font-size--medium)"
        },
        "spacing": {
          "padding": {
            "top": "0.75rem",
            "right": "1.5rem",
            "bottom": "0.75rem",
            "left": "1.5rem"
          }
        },
        "border": {
          "radius": "4px"
        }
      },
      "core/list": {
        "spacing": {
          "margin": {
            "bottom": "1.5rem"
          },
          "padding": {
            "left": "1.5rem"
          }
        }
      },
      "core/quote": {
        "typography": {
          "fontStyle": "italic"
        },
        "spacing": {
          "padding": {
            "left": "1.5rem"
          },
          "margin": {
            "bottom": "1.5rem"
          }
        },
        "border": {
          "left": {
            "color": "var(--wp--preset--color--primary)",
            "width": "4px",
            "style": "solid"
          }
        }
      },
      "core/code": {
        "typography": {
          "fontFamily": "monospace"
        },
        "color": {
          "background": "var(--wp--preset--color--light)",
          "text": "var(--wp--preset--color--dark)"
        },
        "spacing": {
          "padding": {
            "top": "1rem",
            "right": "1.5rem",
            "bottom": "1rem",
            "left": "1.5rem"
          },
          "margin": {
            "bottom": "1.5rem"
          }
        },
        "border": {
          "radius": "4px"
        }
      },
      "core/group": {
        "spacing": {
          "padding": "0"
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}